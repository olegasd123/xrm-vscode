{
  "name": "xrm-vscode",
  "displayName": "XRM Web Resource Publisher",
  "description": "Publish Dynamics 365 (XRM) web resources directly from VS Code with environment-aware bindings.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:xrm.openResourceMenu",
    "onCommand:xrm.configureEnvironments",
    "onCommand:xrm.setDefaultSolution",
    "onCommand:xrm.bindResource",
    "onCommand:xrm.publishResource",
    "onCommand:xrm.signInInteractive",
    "onCommand:xrm.setEnvironmentCredentials",
    "onCommand:xrm.publishLastResource",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xrm.openResourceMenu",
        "title": "Resource Actions",
        "category": "XRM"
      },
      {
        "command": "xrm.configureEnvironments",
        "title": "Edit Environments & Solutions",
        "category": "XRM"
      },
      {
        "command": "xrm.setDefaultSolution",
        "title": "Set Default Solution",
        "category": "XRM"
      },
      {
        "command": "xrm.bindResource",
        "title": "Bind Resource",
        "category": "XRM"
      },
      {
        "command": "xrm.publishResource",
        "title": "Publish Resource",
        "category": "XRM"
      },
      {
        "command": "xrm.publishLastResource",
        "title": "Publish Last Resource",
        "category": "XRM"
      },
      {
        "command": "xrm.setEnvironmentCredentials",
        "title": "Set Environment Credentials",
        "category": "XRM"
      },
      {
        "command": "xrm.signInInteractive",
        "title": "Sign In (Interactive)",
        "category": "XRM"
      }
    ],
    "submenus": [
      {
        "id": "xrm.resourceMenu",
        "label": "XRM"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "submenu": "xrm.resourceMenu",
          "group": "navigation@xrm",
          "when": "resourceScheme == 'file'"
        }
      ],
      "xrm.resourceMenu": [
        {
          "command": "xrm.publishResource",
          "group": "inline@1",
          "when": "true"
        },
        {
          "command": "xrm.bindResource",
          "group": "inline@2"
        },
        {
          "command": "xrm.configureEnvironments",
          "group": "inline@3"
        }
      ],
      "commandPalette": [
        {
          "command": "xrm.openResourceMenu"
        },
        {
          "command": "xrm.configureEnvironments"
        },
        {
          "command": "xrm.setDefaultSolution"
        },
        {
          "command": "xrm.bindResource"
        },
        {
          "command": "xrm.publishResource"
        },
        {
          "command": "xrm.publishLastResource"
        },
        {
          "command": "xrm.setEnvironmentCredentials"
        },
        {
          "command": "xrm.signInInteractive"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node --require ./tests/shims/register.js --test out/tests/**/*.test.js",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@types/node": "^20.10.2",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "zod": "^4.1.13"
  }
}
